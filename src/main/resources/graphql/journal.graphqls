
extend type Query {
    getJournals: [JournalBasicDto!]!
    getJournal(journalId: Int!): JournalDto!
}

extend type Mutation {
    addJournal(name: String!): JournalDto!
    updateJournal(journalId: Int!, name: String!): JournalDto!
    deleteJournal(journalId: Int!): Boolean!
    addJournalEntry(journalId: Int!, text: String!): JournalEntryDto!
    updateJournalEntry(entryId: Int!, text: String): JournalEntryDto!
    deleteJournalEntry(entryId: Int!): Boolean!
}

type JournalDto {
    id: Int!
    name: String!
    entries: [JournalEntryDto!]!
    createdAt: DateTime!
    updatedAt: DateTime!
}

type JournalBasicDto {
    id: Int!
    name: String!
    createdAt: DateTime!
    updatedAt: DateTime!
}

type JournalEntryDto {
    id: Int!
    text: String!
    createdAt: DateTime!
    updatedAt: DateTime!
}